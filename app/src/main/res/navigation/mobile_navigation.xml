<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.webapp.offerSRkh.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_trending_news"
        android:name="com.webapp.offerSRkh.ui.trending.TrendingFragment"
        android:label="Trending"
        tools:layout="@layout/fragment_trending" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.webapp.offerSRkh.ui.info.infoFragment"
        android:label="About"
        tools:layout="@layout/fragment_info"/>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.webapp.offerSRkh.ui.Featured.FeaturedFragment"
        android:label="Search"
        tools:layout="@layout/fragment_featured" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.webapp.offerSRkh.ui.Categries.CategoryFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_category" />

